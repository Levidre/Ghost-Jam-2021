SHIORI3FW.Dl2ToDll
{
	SHIORI3FW.ExecuteDl2ToDll('')
}

//------------------------------------------------------------------------------
//Function name：SHIORI3FW.ExecuteDl2ToDll
//function　：Process dl2 existing in the specified directory
//argument　：_argv[0] Process target path (specify relative path from AYA dll)
//------------------------------------------------------------------------------
SHIORI3FW.ExecuteDl2ToDll
{
	// Enumerate files in specified directory
	_files   = TOLOWER(FENUM(_argv[0]))
	// Store files with extension dl2 in the list. Recursively process in child directories.
	_targets = IARRAY
	foreach _files; _file {
		if SUBSTR(_file, 0, 1) == '\'
			SHIORI3FW.ExecuteDl2ToDll(_argv[0] + _file)
		else {
			_s_path = SPLITPATH(_file)
			if _s_path[3] == '.dl2'
				_targets ,= _s_path[2]
		}
	}

	// Rename extension dl2 to dlldll Delete old dll
	foreach _targets; _target {
		_path = _argv[0] + '\' + _target
		_dmy = FDEL(_path + '.dll')
		_dmy = FRENAME(_path + '.dl2', _path + '.dll')
	}
}

